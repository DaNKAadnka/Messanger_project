<Window x:Class="WpfApp1.RegisterWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="RegisterWindows" Height="500" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" MaxHeight="30" x:Name="loginField"></TextBox>
        <TextBox Grid.Row="1" MaxHeight="30" x:Name="passwordField"></TextBox>

        <Button Grid.Row="2" Click="OnRegistry">Зарегистрироваться</Button>
    </Grid>
</Window>
